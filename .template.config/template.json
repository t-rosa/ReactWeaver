{
  "$schema": "http://json.schemastore.org/template",
  "author": "Toma Rosa",
  "classifications": ["Web"],
  "identity": "ReactWeaver",
  "description": "Weaving the power of ASP.NET Core and React into one seamless experience. Full Stack SPA Template.",
  "name": "React Weaver ",
  "shortName": "react-weaver",
  "sourceName": "ReactWeaver",
  "tags": {
    "language": "C#, React, TypeScript",
    "type": "solution"
  },
  "preferNameDirectory": true,
  "forms": {
    "splitConsecutiveCapitals": {
      "identifier": "replace",
      "pattern": "([A-Z]+)([A-Z][a-z])",
      "replacement": "$1-$2"
    },
    "splitCamelCase": {
      "identifier": "replace",
      "pattern": "([a-z0-9])([A-Z])",
      "replacement": "$1-$2"
    },
    "normalizeSeparators": {
      "identifier": "replace",
      "pattern": "[\\s_]+",
      "replacement": "-"
    },
    "toLower": {
      "identifier": "lowerCase"
    },
    "collapseHyphen": {
      "identifier": "replace",
      "pattern": "-{2,}",
      "replacement": "-"
    },
    "trimHyphen": {
      "identifier": "replace",
      "pattern": "(^-+)|(-+$)",
      "replacement": ""
    },
    "toKebabCase": {
      "identifier": "chain",
      "steps": [
        "splitConsecutiveCapitals",
        "splitCamelCase",
        "normalizeSeparators",
        "toLower",
        "collapseHyphen",
        "trimHyphen"
      ]
    }
  },
  "symbols": {
    "appSlug": {
      "type": "derived",
      "valueSource": "name",
      "valueTransform": "toKebabCase",
      "replaces": "react-weaver"
    }
  }
}
